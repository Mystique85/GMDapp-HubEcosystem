{
  "name": "gm-hub-ecosystem",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npx serve dist\"",
    "build": "esbuild gm.js --bundle --minify --sourcemap --outfile=dist/gm.bundle.js",
    "build:watch": "esbuild gm.js --bundle --sourcemap --outfile=dist/gm.bundle.js --watch"
  },
  "dependencies": {
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "serve": "^14.2.3",
    "concurrently": "^8.2.0"
  }
}
